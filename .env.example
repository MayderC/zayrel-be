# Database Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=zayrel_db
MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@localhost:27017/${MONGO_INITDB_DATABASE}?authSource=admin
MONGODB_DB_NAME=zayrel_db

# Application Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (add when you implement authentication)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Provider Selection: 'zoho' | 'resend'
MAIL_PROVIDER=resend
# Fallback provider (optional) - used if primary fails
MAIL_PROVIDER_FALLBACK=zoho

# Email Configuration (Zoho SMTP - when MAIL_PROVIDER=zoho)
MAIL_HOST=smtppro.zoho.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=hola@tudominio.com
MAIL_PASSWORD=tu-app-password-de-zoho

# Email Configuration (Resend - when MAIL_PROVIDER=resend)
RESEND_API_KEY=re_xxxxxxxxxx

# Common Email Settings
MAIL_FROM=ZayrelStudio <hola@tudominio.com>

# Brand Configuration (used in email templates)
BRAND_NAME=ZayrelStudio
SITE_URL=https://www.zayrelstudio.com
STORE_URL=https://www.zayrelstudio.com
INSTAGRAM_URL=https://www.instagram.com/zayrelstudio

# Email Test Mode (Development only)
# When NODE_ENV=development, all emails will be redirected to this address
MAIL_TEST_RECIPIENT=tu-email-de-prueba@gmail.com

# Frontend URL (for payment redirects)
FRONTEND_URL=http://localhost:3000

# Onvopay Payment Gateway
ONVOPAY_SECRET_KEY=onvo_test_secret_key_xxxxx
ONVOPAY_PUBLIC_KEY=onvo_test_public_key_xxxxx
ONVOPAY_BASE_URL=https://api.onvopay.com/v1
ONVOPAY_WEBHOOK_SECRET=your_webhook_secret_here

# SINPE Manual Config
SINPE_MOBILE_NUMBER=8888-8888

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Telegram Bot Configuration (for admin payment approval)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ORDERS_GROUP_ID=-1001234567890
TELEGRAM_ADMIN_USER_ID=your_telegram_user_id
# Webhook secret - protects webhook from unauthorized requests
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TELEGRAM_WEBHOOK_SECRET=your_random_secret_token_here
# Topic IDs (run create-topics script in zayrel-bot to get these)
TELEGRAM_TOPIC_REVISION=
TELEGRAM_TOPIC_PAGADA=
TELEGRAM_TOPIC_EN_PRODUCCION=
TELEGRAM_TOPIC_ENVIADA=
TELEGRAM_TOPIC_COMPLETADA=